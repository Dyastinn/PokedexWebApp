@{
    ViewData["Title"] = "Pokédex - Gen 1";
}

<style>
    body {
        background-color: #f8f9fa;
        color: #343a40;
    }

    .container {
        max-width: 800px;
        margin: 50px auto;
    }

    .text-center {
        text-align: center;
        margin-top: 30px;
    }

    h1 {
        color: #007bff;
    }

    p {
        font-size: 18px;
        line-height: 1.5;
    }

    img {
        max-width: 100%;
        height: auto;
    }

    a {
        color: #007bff;
        text-decoration: none;

    }

        a:hover {
            text-decoration: underline;
        }
</style>

<div class="container">
    <div class="text-center">
        <img src="https://archives.bulbagarden.net/media/upload/4/4b/Pok%C3%A9dex_logo.png" alt="Pokédex Logo" />
        <h1 class="display-4">Welcome to the Gen 1 Pokédex!</h1>
        <p>Explore and learn about the original 151 Pokémon from the Kanto region. Discover detailed information, stats, and more.</p>
        <p>This Pokédex is a project built with <a href="https://learn.microsoft.com/aspnet/core" target="_blank">ASP.NET Core</a>.</p>
        <p>Get started by using the search feature to find information about your favorite Gen 1 Pokémon!</p>
    </div>
</div>
