<style>
    /* Apply styles to the Pokemon Search container */
    h2 {
        color: #007bff;
    }

    /* Style the horizontal rule */
    hr {
        border-color: #007bff;
    }

    /* Style the form container */
    .row {
        margin-bottom: 20px;
    }

    /* Style the form column */
    .col-md-4 {
        margin-bottom: 20px;
    }

    /* Style the form heading */
    .form-group h4 {
        color: #333;
        margin-bottom: 10px;
    }

    /* Style the label */
    .control-label {
        display: block;
        margin-bottom: 5px;
    }

    /* Style the input field */
    .form-control {
        width: 100%;
        padding: 8px;
        box-sizing: border-box;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    /* Style the search button */
    .btn-primary {
        background-color: #007bff;
        color: #fff;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        /* Hover effect for the search button */
        .btn-primary:hover {
            background-color: #0056b3;
        }

    /* Style the "Back to List" link */
    a {
        color: #007bff;
        text-decoration: none;
    }

        /* Hover effect for the link */
        a:hover {
            text-decoration: underline;
        }</style>
<h2>Pokemon Search</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ShowSearchResult">
            
            <div class="form-group">
                <h4>Pokemon Name</h4>
                <label for="SearchName" class="control-label"></label>
                <input name="SearchName" class="form-control" />
            </div>
            </br>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
            </br>
            </br>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


