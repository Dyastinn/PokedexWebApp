@model Pokemon

@{
    ViewData["Title"] = "Details";
}
<style>
    /* Apply styles to the details container */
    div {
        margin-bottom: 20px;
    }

    /* Style the headers */
    h1, h4 {
        color: #007bff;
    }

    /* Style the horizontal rule */
    hr {
        border-color: #007bff;
    }

    /* Style the definition list */
    dl {
        margin: 0;
    }

    /* Style the definition term */
    dt {
        font-weight: bold;
        margin-top: 10px;
    }

    /* Style the definition description */
    dd {
        margin-bottom: 10px;
    }

    /* Style the edit and back to list links */
    a {
        color: #007bff;
        text-decoration: none;
        margin-right: 10px;
    }

        /* Hover effect for links */
        a:hover {
            text-decoration: underline;
        }

</style>

<h1>Details</h1>

<div>
